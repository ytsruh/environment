// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
	"icon_theme": "Catppuccin Macchiato",
	"agent": {
		"inline_assistant_model": {
			"provider": "zed.dev",
			"model": "claude-sonnet-4"
		},
		"default_profile": "ask",
		"default_model": {
			"provider": "zed.dev",
			"model": "claude-sonnet-4-5"
		}
	},
	"tab_size": 2,
	"toolbar": {
		"breadcrumbs": false,
		"quick_actions": false
	},
	"tab_bar": {
		"show_nav_history_buttons": false
	},
	"hard_tabs": true,
	"languages": {
		"Go": {
			"tab_size": 2,
			"formatter": "auto",
			"format_on_save": "on"
		},
		"JavaScript": {
			"tab_size": 2
		},
		"Templ": {
			"tab_size": 2,
			"formatter": {
				"external": {
					"command": "templ",
					"arguments": ["fmt", "-stdin-filepath", "{buffer_path}"]
				}
			},
			"format_on_save": "on",
			"language_servers": [
				"templ",
				"tailwindcss-language-server",
				"vscode-html-language-server",
				"emmet-language-server"
			],
			"inlay_hints": {
				"enabled": true
			}
		}
	},
	"lsp": {
		"emmet-language-server": {
			"settings": {
				"includeLanguages": {
					"templ": "html"
				}
			}
		},
		"tailwindcss-language-server": {
			"settings": {
				"includeLanguages": {
					"templ": "html"
				},
				"experimental": {
					"classRegex": ["class=\"([^\"]*)\"", "className=\"([^\"]*)\""]
				}
			}
		}
	},
	"formatter": {
		"language_server": {
			"name": "biome"
		}
	},
	"code_actions_on_format": {
		"source.fixAll.biome": true,
		"source.organizeImports.biome": true
	},
	"ui_font_size": 16,
	"buffer_font_size": 16,
	"soft_wrap": "bounded",
	"preferred_line_length": 160,
	"theme": {
		"mode": "system",
		"light": "One Light",
		"dark": "Tokyo Night Storm"
	},
	"auto_install_extensions": {
		"html": true,
		"dockerfile": true,
		"docker-compose": false,
		"sql": true,
		"emmet": true,
		"make": true,
		"tokyonight": true,
		"biome": true,
		"catppuccin-icons": true
	}
}
